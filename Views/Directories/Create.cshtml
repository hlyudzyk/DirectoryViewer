@model DirectoryViewer.Models.CreateVM

<form method="post" asp-action="Create">
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-info pl-3">Add Directory</h2>
		</div>
		<div class="row">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DirectoryModel.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DirectoryModel.Name" class="form_control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DirectoryModel.ParentId"></label>
                    </div>
                    <div class="col-8">
                        
                        <select asp-for="DirectoryModel.ParentId" asp-items="@Model.Ids" class="form-control">
                            <option>--Select Parent Directory--</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row mt-5">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
			                    Back
			                </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
	</div>
</form>
